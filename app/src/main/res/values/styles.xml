<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- BASE THEME-->
    <style name="GalleryAppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">

        <!--THEME DEFAULT-->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryLightColor</item>
        <item name="colorPrimaryDark">@color/primaryColor</item>
        <item name="colorAccent">@color/orange</item>
        <item name="backgroundColor">@color/primaryColor</item>
    </style>

    <!-- BOTTOM NAVIGATION STYLE THEME-->
    <style name="GalleryAppTheme.BottomNavigation">
        <item name="android:background">@color/primaryColor</item>
        <item name="itemIconTint">@drawable/selector_grey</item>
        <item name="itemTextColor">@drawable/selector_grey</item>
        <item name="paddingStart">@dimen/default_padding</item>
        <item name="paddingEnd">@dimen/default_padding</item>
    </style>

    <!-- TEXT THEME -->
    <style name="TextStyle">
        <item name="android:background">?attr/colorSurface</item>
    </style>

    <style name="TextPrimary.H5.Header" parent="TextStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/blackAlpha87</item>
        <item name="fontFamily">@font/raleway_extrabold</item>
    </style>

    <style name="TextPrimary.H6.Header" parent="TextStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/blackAlpha87</item>
        <item name="fontFamily">@font/raleway_semibold</item>
    </style>

    <style name="TextPrimary.B1.Header" parent="TextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/blackAlpha87</item>
        <item name="fontFamily">@font/raleway_semibold</item>
    </style>

    <style name="TextPrimary.B2.Button" parent="TextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/orange</item>
        <item name="android:textAllCaps">true</item>
        <item name="fontFamily">@font/raleway</item>
    </style>

    <style name="TextPrimary.B2.Body" parent="TextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/blackAlpha87</item>
        <item name="fontFamily">@font/raleway_medium</item>
    </style>

    <style name="TextSecondary.B1.Header" parent="TextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/blackAlpha87</item>
        <item name="fontFamily">@font/raleway_semibold</item>
    </style>

    <style name="TextSecondary.B2.Body" parent="TextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/blackAlpha87</item>
        <item name="fontFamily">@font/raleway_medium</item>
    </style>

</resources>
